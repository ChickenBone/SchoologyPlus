{
    "manifest_version": 2,
    "name": "Schoology Plus",
    "short_name": "Schoology+",
    "description": "Provides some enhancements to your LAUSD Schoology experience",
    "applications": {
        "gecko": {
            "id": "schoology.plus@aopell.me",
            "update_url": "https://aopell.me/SchoologyPlus/update.json"
        }
    },
    "version": "4.1.1",
    "icons": {
        "128": "imgs/icon@128.png",
        "64": "imgs/icon@64.png",
        "48": "imgs/icon@48.png",
        "32": "imgs/icon@32.png",
        "16": "imgs/icon@16.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "imgs/icon@16.png",
            "32": "imgs/icon@32.png",
            "48": "imgs/icon@48.png",
            "64": "imgs/icon@64.png",
            "128": "imgs/icon@128.png"
        },
        "default_title": "Schoology Plus"
    },
    "permissions": [
        "*://lms.lausd.net/*",
        "*://*.schoology.com/*",
        "activeTab",
        "storage",
        "alarms",
        "notifications"
    ],
    "web_accessible_resources": [
        "imgs/plus-icon.png",
        "imgs/toy-mode.png",
        "imgs/icon@128.png",
        "js/materials.pdfhandler.js",
        "theme-editor.html"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://lms.lausd.net/*"
            ],
            "css": [
                "css/all.css"
            ],
            "js": [
                "js/icons.js",
                "js/theme.js",
                "js/preload.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://lms.lausd.net/*"
            ],
            "css": [
                "lib/css/contextmenu.css"
            ],
            "js": [
                "lib/js/contextmenu.js",
                "js/all.js",
                "lib/js/findAndReplaceDOMText.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lms.lausd.net/grades/grades*",
                "https://lms.lausd.net/course/*/student_grades"
            ],
            "css": [
                "css/grades.css"
            ],
            "js": [
                "js/grades.js",
                "js/course.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lms.lausd.net/course/*/materials*"
            ],
            "css": [
                "css/materials.css"
            ],
            "js": [
                "lib/js/jquery-3.3.1.min.js",
                "lib/js/jquery-migrate-3.0.1.js",
                "lib/js/jquery.tipsy.min.js",
                "js/materials.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lms.lausd.net/mastery*"
            ],
            "js": [
                "js/mastery.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lms.lausd.net/home",
                "https://lms.lausd.net/home#*",
                "https://lms.lausd.net/home/recent-activity*"
            ],
            "js": [
                "js/home.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lms.lausd.net/course/*"
            ],
            "js": [
                "js/course.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://lms.lausd.net/*"
            ],
            "js": [
                "js/all-idle.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
